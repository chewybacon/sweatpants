{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    // Package/Library: emit types and source maps for consumers
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmit": false,
    "outDir": "./dist",

    // Libraries need to be strict
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "exactOptionalPropertyTypes": true
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules", "tests"]
}
