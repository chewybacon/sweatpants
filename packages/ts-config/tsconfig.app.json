{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    // App: browser-based, no emit, relaxed in some areas
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "noEmit": true,

    // Apps can be a bit more lenient
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strict": true
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
