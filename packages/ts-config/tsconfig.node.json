{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    // Node.js environment
    "lib": ["ES2022"],
    "jsx": "react-jsx",
    "noEmit": true,

    // Node typically doesn't need DOM types
    "skipLibCheck": true,

    // Strict by default
    "strict": true
  },
  "include": ["src", "tests"],
  "exclude": ["dist", "node_modules"]
}
