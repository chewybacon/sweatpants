{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    // React/Browser environment
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "noEmit": true,

    // React projects typically don't emit
    "skipLibCheck": true,

    // Strict by default
    "strict": true
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
