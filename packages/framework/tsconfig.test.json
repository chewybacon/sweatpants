{
  "extends": "./tsconfig.lib.json",
  "compilerOptions": {
    "noEmit": true,
    "composite": false,
    "emitDeclarationOnly": false,
    "rootDir": ".",
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "exactOptionalPropertyTypes": false,
    "noUncheckedIndexedAccess": false,
    "types": ["node"]
  },
  "include": [
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "src/**/__tests__/**/*.ts",
    "src/**/__tests__/**/*.tsx",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "e2e/**/*.ts",
    "e2e/**/*.tsx"
  ],
  "exclude": ["dist", "node_modules"]
}
