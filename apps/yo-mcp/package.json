{
  "name": "yo-mcp",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "bin": {
    "yo-mcp": "./dist/cli.js"
  },
  "scripts": {
    "dev": "tsx src/cli.ts",
    "dev:silent": "pnpm --silent dev",
    "build": "tsup",
    "check": "tsc --noEmit",
    "start": "node dist/cli.js",
    "inspect": "tsx src/cli.ts & sleep 1 && npx @modelcontextprotocol/inspector --transport http --server-url http://localhost:3001/mcp",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed"
  },
  "dependencies": {
    "@sweatpants/framework": "workspace:*",
    "effection": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "@sweatpants/ts-config": "workspace:*",
    "@types/node": "catalog:",
    "tsup": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:"
  }
}
